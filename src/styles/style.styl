/* colors */
color-1 = #686D76
color-2 = #373A40
color-3 = #EEEEEE
color-4 = #DC5F00

html
    font-size: 10px

body
    font-size: 1.6rem
    font-family: "Open Sans", system-ui, 'Segoe UI', Helvetica, Arial, sans-serif
    background-color: color-1
    color: color-3

a, button
    cursor: pointer

.wrapper
    margin: 0 auto
    max-width: 1140px

.title
    text-transform: uppercase
    font-size: 3.5rem

.link
    display: block
    outline: none
    transition: transform .3s ease-in-out
    &:hover
        transform: scale(1.1)
    &--github
        width: 40px
        height: 40px
        background: url("../icons/github.svg") center / 32px no-repeat

.button
    display: block
    outline: none
    border: none
    border-radius: 5px
    color: color-3
    text-transform: uppercase
    font-weight: bold
    font-size: 2rem
    &--delete
        width: 40px
        height: 40px
        background: url("../icons/delete.svg") center / 32px no-repeat
        transition: transform .3s ease-in-out
    &:hover
        transform: scale(1.1)

.header
    padding: 15px 0
    background-color: color-2
    box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.35)
    &__inner
        display: flex
        align-items: center
        justify-content: space-between
    &__menu
        cursor: pointer
        display: flex
        gap: 25px